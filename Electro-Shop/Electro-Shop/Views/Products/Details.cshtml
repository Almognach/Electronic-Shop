@model Electro_Shop.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Main layout-->
<main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

        <!--Grid row-->
        <div class="row wow fadeIn">

            <!--Grid column-->
            <div class="col-md-6 mb-4">

                <img height="708" width="472" src="@Model.PathToImage" class="img-fluid" alt="">

            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-6 mb-4">

                <!--Content-->
                <div class="p-4">

                    <div class="mb-3">
                        <a href="">
                            <span class="badge purple mr-1">Category (to be completed)</span>
                        </a>
                        <a href="">
                            <span class="badge blue mr-1">@Model.Brand (to add link to search by brand)</span>
                        </a>
                    </div>

                    <p class="lead">
                        <span class="mr-1">
                            <del>₪@Convert.ToInt32(@Model.Price * 1.15)</del>
                        </span>
                        <span>₪@Model.Price</span>
                    </p>

                    <p class="lead font-weight-bold">Description</p>

                    <p>
                        @Model.Description
                    </p>

                    <form class="d-flex justify-content-left">
                        <!-- Default input -->
                        <input type="number" value="1" aria-label="Search" class="form-control" style="width: 100px">
                        <button style ="height: 38px; margin-left:10px" class="btn btn-primary btn-md my-0 p" type="submit">
                            Add to cart
                            <i class="fas fa-shopping-cart ml-1"></i>
                        </button>

                    </form>

                </div>
                <!--Content-->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->

        <hr>

    </div>
</main>
<!--Main layout-->
<!--Footer-->
